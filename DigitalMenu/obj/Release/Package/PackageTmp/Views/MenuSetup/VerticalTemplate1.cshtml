@model IEnumerable<DigitalMenu.Models.Item>


@{
    Layout = null;
}




    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
          crossorigin="anonymous">
    <style type="text/css">
        .card-img-top {
            height: 15rem;
            object-fit: cover;
        }
    </style>

    <title>Menu</title>



    <div class="container-fluid">
        <!-- <h1>Menu</h1> -->
        <!-- <div class="shadow-lg p-3 mb-5 bg-white rounded sticky-top text-center font-weight-bold">Today's Menu</div> -->

            <div class="jumbotron text-left shadow-lg  p-1 mb-3 rounded ">
                <h1>Today's Menu</h1>

            </div>
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @{
                        int count = 0;
                        for (int m = 0; m < ViewBag.NoOfSlides; m++)
                        {
                            string isActive = "";
                            int j = 0;
                            if (m == 0)
                            {
                                isActive = "active";
                            }
                            <div class="carousel-item @isActive">
                                <div class="card-deck">


                                    @foreach (string Category in (List<string>)ViewBag.Categories)
                                    {

                                        int i = 0,categoryNumber=count+1;
                                        j++;

                                        if (j > count) {
                                         
                                        <div class="card">
                                            @foreach (var item in Model.Where(ij => ij.Category.CategoryName == Category))
                                            {
                                                i++;
                                                if (i == 1)
                                                {
                                                    <img class="card-img-top" src="~/Items/RetrieveImage/@item.ID" alt="Card image cap">
                                                }
                                                break;
                                            }
                                            <div class="card-body">
                                                <h3 class="card-title btn btn-warning w-100 p-2">
                                                    <span class="btn btn-outline-light float-left clearfix"> @categoryNumber </span>
                                                    <span class="float-right">
                                                        <h3>@Category</h3>
                                                    </span>
                                                </h3>
                                                <!-- <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> -->
                                                <!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> -->
                                                <ul class="list-group list-group-flush">
                                                    @foreach (var item in Model.Where(ij => ij.Category.CategoryName == Category))
                                                    {

                                                        <li class="list-group-item">
                                                            <span class="text-left font-weight-bold">@item.ItemName</span>
                                                            <span class="float-right badge badge-success">$@item.Price1</span>
                                                            <p class="card-text font-italic">
                                                                <small>@item.Description</small>
                                                            </p>
                                                        </li>

                                                    }
                                                </ul>
                                            </div>

                                        </div>
                                            count++;
                                            if (j % ViewBag.NoOfItemInRow == 0)
                                            { break; }

                                        }
                                    }
                                </div>
                            </div>
                        }

                    }
                    <!-- Optional JavaScript -->
                    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
                    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
                            crossorigin="anonymous"></script>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
                            crossorigin="anonymous"></script>
                    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T"
                            crossorigin="anonymous"></script>
                </div>
            </div>
        </div>


