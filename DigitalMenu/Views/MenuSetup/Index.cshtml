
@{
    ViewBag.Title = "Index";
}
<div class="mb-2 p-10" style="height:20px;"></div>
    <div class="col-md-12">
        <div class="p-3 mb-2  alert alert-success" role="alert">
            <h2>Grid Menu</h2>

            @using (Html.BeginForm("Index", "MenuSetup", FormMethod.Post, new { target = "_blank" }))
            {<p>
                    <div class="form-inline">
                        <div class="form-group">
                            <label>No of Item in Row:</label><br />
                            <input type="text" name="NoOfItemInRow" value="" class="form-control mr-3" style="width:130px" />
                        </div>
                        <div class="form-group">
                            <label>Categories:</label><br />
                            @{
                                List<SelectListItem> listCategories = ((System.Web.Mvc.SelectList)ViewBag.CategoryId).ToList();
                                listCategories.Insert(0, new SelectListItem() { Value = "-1", Text = "All" });

                            }
                            @Html.DropDownList("CategoryId", (IEnumerable<SelectListItem>)listCategories, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label>Template:</label><br />
                            <select name="Template" class="form-control">
                                <option value="Template1">Template1</option>
                                <option value="Template2">Template2</option>
                                <option value="Template3">Template3</option>

                            </select>


                        </div>
                        <div class="form-group">
                            <br />
                            <button type="submit" class="btn btn-default" name="btnSearch" style=" margin-bottom: -5px;">
                                <i class="glyphicon glyphicon-search"></i> Generate
                            </button>
                        </div>
                    </div>


                </p>
            }
        </div>
    </div>

